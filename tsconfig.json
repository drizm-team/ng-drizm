{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {

      "@drizm/loader/*": [
        "projects/loader/*",
        "projects/loader"
      ],
      "@drizm/loader": [
        "dist/loader/*",
        "dist/loader"
      ],

      "@drizm/utils/*": [
        "projects/utils/*",
        "projects/utils"
      ],
      "@drizm/utils": [
        "dist/utils/*",
        "dist/utils"
      ],

      "@drizm/buttons/*": [
        "projects/buttons/*",
        "projects/buttons"
      ],
      "@drizm/buttons": [
        "dist/buttons/*",
        "dist/buttons"
      ]

    }
  }
}
